---
import { app_name } from '../common/const'
import 'last.css'

const { title: _title, index } = Astro.props.frontmatter
const title = `第${{
	0: '零', 1: '一', 2: '二', 3: '三',
	4: '四', 5: '五', 6: '六', 7: '七',
	8: '八', 9: '九', 10: '十',
}[index as number]}章 ${_title}`

const pages = (await Astro.glob('../pages/*'))
	.sort((a, b) => a.frontmatter.index - b.frontmatter.index)
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={app_name + ': ' + title} />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<ul>
				{pages.map(page =>
					<li>{page.frontmatter.title == _title
						? page.frontmatter.title
						: <a href={page.url}>
							{page.frontmatter.title}
						</a>
					}</li>
				)}
			</ul>
		</nav>
		<article class="simple_style">
			<h2>{title}</h2>
			<slot />
		</article>
		<aside>
			<h5>{title}</h5>
			<ul>
				{Astro.props.headings.map(h =>
					<li>
						<a href={h.slug}>{h.text}</a>
					</li>
				)}
			</ul>
		</aside>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color: #fff;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

<style>
	@media (1440px <= width) { /* nav 和 aside 都有，article 居中，nav 在左，aside 再右 */
		nav {
			position: fixed;
			left: 0;
			top: 0;
			bottom: 0;
			width: 220px;
			background: rgba(var(--fc), .06);
		}
		nav ul {
			list-style: none;
			padding-left: 0;
			margin: 6px 0;
			line-height: 2;
		}
		article {
			width: 800px;
			margin: 0 auto;
		}
		aside {
			left: calc(50vw + 500px);
		}
	}
	@media (1100px <= width < 1440px) { /* nav 放不开了，article 靠左，aside 在右 */
		nav {
			display: none;
		}
		article {
			width: 800px;
			margin: 0 100px;
		}
		aside {
			left: 1000px;
		}
	}
	@media (1100px <= width) {
		aside {
			position: fixed;
			top: 200px;
		}
		aside ul {
			padding-left: 0;
			margin: 0;
			list-style: none;
		}
	}
	@media (width < 1100px) { /* aside 也放不开了，article 居中 */
		article {
			padding: 0 1rem;
			max-width: 800px;
			margin: 0 auto;
		}
		h2 {
			margin-top: 1em;
		}
		nav {
			display: none;
		}
		aside {
			display: none;
		}
	}
</style>
